<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orders_listOfOrdersRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/orders_startShoppingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/start_shopping"
        app:layout_constraintEnd_toEndOf="@+id/orders_detailsTxt"
        app:layout_constraintStart_toStartOf="@+id/orders_detailsTxt"
        app:layout_constraintTop_toBottomOf="@+id/orders_detailsTxt" />

    <TextView
        android:id="@+id/orders_detailsTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/currently_you_do_not_have_any_orders_when_you_order_something_it_will_appear_here"
        app:layout_constraintEnd_toEndOf="@+id/orders_noOrdersFoundImage"
        app:layout_constraintStart_toStartOf="@+id/orders_noOrdersFoundImage"
        app:layout_constraintTop_toBottomOf="@+id/orders_noOrdersFoundImage" />

    <ImageView
        android:id="@+id/orders_noOrdersFoundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_listOfOrdersRecycler"
        app:srcCompat="@drawable/no_oprders_found" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/border_search"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionSearch"
        android:inputType="textPersonName"
        android:padding="16dp"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>