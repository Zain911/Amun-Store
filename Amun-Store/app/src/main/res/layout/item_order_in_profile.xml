<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainConstrainLayout"
    android:padding="12dp">

    <TextView
        android:id="@+id/orderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #120"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/06/2022"
        app:layout_constraintStart_toStartOf="@id/orderNameTextView"
        app:layout_constraintTop_toBottomOf="@id/orderNameTextView" />

    <TextView
        android:id="@+id/orderItemCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/orderNameTextView" />

    <TextView
        android:id="@+id/orderTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 L.E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderItemCountTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>