<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:weightSum="7">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/itemOrder_orderStatueImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/heart" />

                    <TextView
                        android:id="@+id/itemOrder_orderStatueTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/itemOrder_orderStatueImage"
                        app:layout_constraintTop_toTopOf="@+id/itemOrder_orderStatueImage" />

                    <TextView
                        android:id="@+id/itemOrder_dateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_margin="16dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="@+id/itemOrder_orderStatueImage"
                        app:layout_constraintStart_toEndOf="@+id/itemOrder_orderStatueImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/itemOrder_backButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.489"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/itemOrder_productImage"
                        android:layout_width="64dp"
                        android:layout_height="100dp"
                        android:layout_margin="16dp"
                        android:layout_marginStart="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ads5" />

                    <TextView
                        android:id="@+id/itemOrder_titleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="TextView"
                        app:layout_constraintStart_toEndOf="@+id/itemOrder_productImage"
                        app:layout_constraintTop_toTopOf="@+id/itemOrder_productImage" />

                    <TextView
                        android:id="@+id/itemOrder_productTypeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="TextView"
                        app:layout_constraintStart_toStartOf="@+id/itemOrder_titleTxt"
                        app:layout_constraintTop_toBottomOf="@+id/itemOrder_titleTxt" />

                    <TextView
                        android:id="@+id/itemOrder_productSizeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="@+id/itemOrder_productImage"
                        app:layout_constraintStart_toStartOf="@+id/itemOrder_productTypeTxt" />

                    <TextView
                        android:id="@+id/itemOrder_prductColorTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="@+id/itemOrder_productSizeTxt"
                        app:layout_constraintStart_toEndOf="@+id/itemOrder_productSizeTxt"
                        app:layout_constraintTop_toTopOf="@+id/itemOrder_productSizeTxt"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/itemOrder_cancelBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/itemOrder_TrackBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/itemOrder_TrackBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="@+id/itemOrder_cancelBtn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/itemOrder_cancelBtn"
                        app:layout_constraintTop_toTopOf="@+id/itemOrder_cancelBtn" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>