<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/border_address_order"
    android:elevation="4dp"
    android:padding="8dp">


    <TextView
        android:id="@+id/titleCouponTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        tools:text="Amoun 10101"
        android:textColor="@color/dark_title"
        android:textSize="18sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/copyCouponAppCompactButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/copyCouponAppCompactButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/border_change_address"
        android:text="@string/copy"
        android:textAllCaps="false"
        android:textColor="@color/hyber_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seprator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/gray_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyCouponAppCompactButton" />

    <TextView
        android:id="@+id/discountValue_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:text="@string/discount_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seprator" />

    <TextView
        android:id="@+id/discountValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="50 EGP"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/discountValue_txt"
        app:layout_constraintStart_toEndOf="@+id/discountValue_txt"
        app:layout_constraintTop_toTopOf="@+id/discountValue_txt" />

    <TextView
        android:id="@+id/startDate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/start_date"
        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountValue_txt" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22-5-2023"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/startDate_txt"
        app:layout_constraintStart_toEndOf="@+id/startDate_txt"
        app:layout_constraintTop_toTopOf="@+id/startDate_txt"
        />

    <TextView
        android:id="@+id/status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/startDate_txt"
        app:layout_constraintTop_toBottomOf="@+id/startDate_txt" />

    <TextView
        android:id="@+id/statusCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/status_txt"
        app:layout_constraintStart_toEndOf="@+id/status_txt"
        app:layout_constraintTop_toTopOf="@+id/status_txt"
     />


</androidx.constraintlayout.widget.ConstraintLayout>


