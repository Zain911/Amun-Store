<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/sign_up"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signup_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/sign_up_with_one_of_the_following_options"
            app:layout_constraintEnd_toEndOf="@+id/sign_up"
            app:layout_constraintStart_toStartOf="@+id/sign_up"
            app:layout_constraintTop_toBottomOf="@+id/sign_up" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/signup_details"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/signup_details"
            app:layout_constraintTop_toBottomOf="@+id/signup_details">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:foregroundGravity="center"
                android:padding="8dp"
                app:cardCornerRadius="60dp">

                <Button
                    android:id="@+id/signin_google"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Button" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:foregroundGravity="center"
                android:padding="8dp"
                app:cardCornerRadius="60dp">

                <Button
                    android:id="@+id/signin_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:text="Button" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:foregroundGravity="center"
                android:padding="8dp"
                app:cardCornerRadius="60dp">

                <Button
                    android:id="@+id/signin_apple"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:text="Button" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_linear"
            android:layout_width="393dp"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:text="@string/or" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/signup_name_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintEnd_toEndOf="@+id/signup_linear"
            app:layout_constraintStart_toStartOf="@+id/signup_linear"
            app:layout_constraintTop_toBottomOf="@+id/signup_linear">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_name"
                android:layout_width="330dp"
                android:layout_height="64dp"
                android:background="#368C8C8C"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/signup_email_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintEnd_toEndOf="@+id/signup_name_card"
            app:layout_constraintStart_toStartOf="@+id/signup_name_card"
            app:layout_constraintTop_toBottomOf="@+id/signup_name_card">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_email"
                android:layout_width="330dp"
                android:layout_height="64dp"
                android:background="#368C8C8C"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/signup_password_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintEnd_toEndOf="@+id/signup_email_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/signup_email_card"
            app:layout_constraintTop_toBottomOf="@+id/signup_email_card">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_password"
                android:layout_width="330dp"
                android:layout_height="64dp"
                android:background="#368C8C8C"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintEnd_toEndOf="@+id/signup_password_card"
            app:layout_constraintStart_toStartOf="@+id/signup_password_card"
            app:layout_constraintTop_toBottomOf="@+id/signup_password_card">

            <Button
                android:id="@+id/signup_login"
                android:layout_width="330dp"
                android:layout_height="64dp"
                android:background="@drawable/custom_button"
                android:text="@string/create_account"
                app:layout_constraintStart_toStartOf="@+id/signup_password"
                app:layout_constraintTop_toBottomOf="@+id/signup_password" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:paddingBottom="16dp"
            android:text="@string/don_t_have_an_account"
            app:layout_constraintStart_toStartOf="@+id/signup_password_card"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/signup_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/sign_up"
            android:textColor="#F12A80"
            app:layout_constraintStart_toEndOf="@+id/signup_text"
            app:layout_constraintTop_toTopOf="@+id/signup_text" />


        <!-- <View
             android:layout_width="320dp"
             android:layout_height="2dp"
             android:layout_marginTop="20dp"
             android:background="@color/black"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.494"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/linearLayout" />   -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>