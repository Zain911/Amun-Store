<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_image_border"
    >

    <ImageView
        android:id="@+id/dialogLoginSuccessfully_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/verified"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/verified"
        tools:srcCompat="@drawable/verified" />

    <TextView
        android:id="@+id/dialogLoginSuccessful_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/login_successful"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/dialogLoginSuccessfully_image"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/dialogLoginSuccessfully_image"
        app:layout_constraintTop_toBottomOf="@+id/dialogLoginSuccessfully_image" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialogSuccessful_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialogLoginSuccessfully_image"
        app:layout_constraintStart_toStartOf="@+id/dialogLoginSuccessfully_image"
        app:layout_constraintTop_toBottomOf="@+id/dialogLoginSuccessful_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>